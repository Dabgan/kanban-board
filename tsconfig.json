{
    "extends": "@vercel/style-guide/typescript/node20",
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "noEmit": true,
        "module": "esnext",
        "strict": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [{ "name": "next" }],
        "paths": { "@/*": ["./src/*"] },
        "types": ["jest", "@testing-library/jest-dom"]
    },
    "include": [
        "svgr.d.ts",
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "jest.config.js",
        "next.config.js"
    ],
    "exclude": ["node_modules"]
}
